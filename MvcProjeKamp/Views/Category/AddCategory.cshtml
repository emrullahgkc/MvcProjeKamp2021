@model Entity.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<h1> Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextAreaFor(x => x.CategoryName)
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.CategoryDescription);
    @Html.ValidationMessageFor(x => x.CategoryDescription)

    <br />
    <button class="btn btn-primary"> Kaydet</button>
</div>
}













